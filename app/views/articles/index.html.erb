<h1>Todos los artículos</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th></th>
    </tr>

    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title%></td>
            <td><%= article.text%></td>
            <td><%= link_to 'Mostrar', article_path(article) %></td>
            <td><%= link_to 'Editar', edit_article_path(article)%></td>
            <td><%= link_to 'Borrar', article_path(article), method: :delete, data: { confirm: '¿Estás segura?'} %></td>
        </tr>
    <% end %>
</table>