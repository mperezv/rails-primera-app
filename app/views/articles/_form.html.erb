<%= form_with model: @article, local: true do |form| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> no se ha podido guardar el artículo:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "btn btn-input" %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text, class: "btn btn-input" %>
  </p>
 
  <p>
    <%= form.submit "Crear artículo", class: "btn-submit" %>
  </p>
 
<% end %>